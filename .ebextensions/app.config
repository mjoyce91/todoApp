commands:
  01_node_symlink:
    command: "ln -sf `ls -td /opt/elasticbeanstalk/node-install/node-* | head -1`/bin/node /bin/node"
  02_npm_symlink:
    command: "ln -sf `ls -td /opt/elasticbeanstalk/node-install/node-* | head -1`/bin/npm /bin/npm"
  03_sails_install:
    command: "if [ ! -e /bin/sails ]; then npm install sails -g; fi"
    ignoreErrors: true
  04_sails_4.4.6_install:
    command: "/opt/elasticbeanstalk/node-install/node-v4.4.6-linux-x64/bin/npm install -g sails"
  05_sails_symlink:
    command: "ln -sf `ls -td /opt/elasticbeanstalk/node-install/node-* | head -1`/bin/sails /bin/sails"
