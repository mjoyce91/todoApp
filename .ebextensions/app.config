commands:
  01_node_symlink:
    command: "ln -sf `ls -td /opt/elasticbeanstalk/node-install/node-v4.4.6-linux-x64 | head -1`/bin/node /bin/node"
  02_npm_symlink:
    command: "ln -sf `ls -td /opt/elasticbeanstalk/node-install/node-v4.4.6-linux-x64 | head -1`/bin/npm /bin/npm"
  03_sails_install:
    command: "npm install -g sails"
    ignoreErrors: true
